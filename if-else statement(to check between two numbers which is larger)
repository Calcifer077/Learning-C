#include<stdio.h>

int main() {
	int a,b;
	printf("Enter two numbers : ");
	scanf("%d%d", &a,&b);
	
	if(a>b){
		printf("%d is larger than %d.", a,b);
	}if(b>a){
		printf("%d is larger than %d.", b,a);
	}if(a == b){
		printf("Both are the same number.");
	}
	return 0;
}
// The above method only uses if statements.
// The below statements uses both if and else statements.

#include<stdio.h>

int main() {
	int a,b;
	printf("Enter two numbers : ");
	scanf("%d%d", &a,&b);
	
	if(a>b){
		printf("%d is larger than %d.", a,b);
	}else ifif(b>a){
		printf("%d is larger than %d.", b,a);
	}else if(a == b){
		printf("Both are the same number.");
	}
	return 0;
}
